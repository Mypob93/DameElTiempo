<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.app.mauro.dameeltiempo.PantallaPrincipal"
    android:background="@drawable/cielofondo">

    <Button
        android:id="@+id/pronostico"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="PRONOSTICO"
       />

    <Button
        android:id="@+id/pronosticoExtendido"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"


        android:text="PRONOSTICO EXTENDIDO"
         />

    <Button
        android:id="@+id/pronosticoLocalizacion"
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:text="PRONOSTICO POR LOCALIZACION" />
</LinearLayout>
